<%
image = review.image(i)
link_url = nil
link_data = nil
target = nil
if local_assigns[:external_widget]
  link_class = 'photo-review-new-window'
  link_url = photo_review_popup_review_url(review, photo_index: i, external_widget: 1)
  target = '_blank'
else
  link_class = 'link-fullscreen-popup'
  link_data = {url: photo_review_popup_review_path(review, photo_index: i)}
end
%>
<%= content_tag :li, class: local_assigns[:li_class] do %>
  <%= content_tag :a, href: link_url, data: link_data, target: target, class: link_class do %>
    <%= image_tag image.url(:gallery), class: 'review-image smooth', alt: review.title %>
  <% end %>
<% end %>
