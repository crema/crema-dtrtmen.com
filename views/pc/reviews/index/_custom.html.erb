<% title @board ? @board.name : '전체 리뷰' %>
<% content_for :content do %>
  <%= content_tag :div, class: "widget widget-reviews pagination-list #{'no-data' if @reviews.empty?}" do %>
    <div class="widget-body">
      <%= render 'reviews/index/custom/top_menu' %>
      <ul class="header">
        <li>
          <div class="col index">번호</div>
          <div class="col product-image">이미지</div>
          <div class="col product-name">제품명</div>
          <div class="col score">평점</div>
          <div class="col title">제목</div>
          <div class="col author">작성자</div>
          <div class="col icon">버튼</div>
        </li>
      </ul>
      <%= content_tag :div, '아직 작성한 리뷰가 없습니다.', class: 'no-data-message' %>
      <ul class="reviews reviews-default">
        <%= render partial: 'reviews/index/custom/review', collection: @reviews %>
      </ul>
    </div>
    <div class="widget-footer">
      <%= render 'reviews/index/custom/pagination' %>
    </div>
  <% end %>
  <%= render 'common/shared/form_upload_image' %>
<% end %>
