<% (1..@review.images_count).each do |index| %>
  <% image = @review.image(index) %>
  <% w, h = image.dimension %>
  <%= content_tag :div, data: {width: w, height: h, index: index, count: @review.images_count}, id: "photo-container-#{index}", class: "photo-container #{'selected' if index == @photo_index.to_i} ie-opacity-fix" do %>
    <%= image_tag image.url, class: 'review-image-zoom', data: {width: w, height: h}, alt: @review.title %>
  <% end %>
<% end %>