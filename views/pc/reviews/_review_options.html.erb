<% if !review.options.empty? || (@brand.review_show_options && !review.product_options.blank?) %>
  <div class="review-options">
    <% if !review.options.empty? %>
      <% review.options.sorted.each_with_index do |option, i| %>
        <%= content_tag :div, class: "review-option #{'first' if i == 0}" do %>
          <div class="review-option-title"><%= option.name %></div>
          <div class="review-option-content"><%= option.value %> <%= option.unit if option.field_type == ReviewOptionFieldType::NUMBER && !option.unit.blank? %></div>
        <% end %>
      <% end %>
    <% end %>
    <% if @brand.review_show_options && !review.product_options.blank? %>
      <div class='review-option options'>
        <div class="review-option-title">선택한 옵션</div>
        <div class="review-option-content">
          <% review.product_options.each_with_index do |option, i| %>
            <span class="review-product-option <%= 'first-option' if 0 == i %>">
              <span class="option-key"><%= option.first %>:</span>
              <span class='option-value'><%= option.last %></span>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>